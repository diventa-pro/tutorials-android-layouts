<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="diventa.pro.androidlayouts.NumericPadActivity">

    <Button
            android:text="1"
            android:layout_height="64dp"
            android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp" android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:background="@drawable/red_round_button"
            android:layout_width="64dp"/>
    <Button
            android:text="2"
            android:layout_width="64dp"
            android:layout_height="64dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/button2"
            app:layout_constraintEnd_toStartOf="@+id/button3" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/button" android:layout_marginStart="24dp"
            android:background="@drawable/red_round_button"/>
    <Button
            android:text="3"
            android:layout_width="64dp"
            android:layout_height="64dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/button3" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:background="@drawable/red_round_button"/>
    <Button
            android:text="4"
            android:layout_height="64dp"
            android:id="@+id/button5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_width="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="@drawable/red_round_button"/>
    <Button
            android:text="5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/button6"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintEnd_toStartOf="@+id/button7" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginStart="24dp"
            android:background="@drawable/red_round_button"/>
    <Button
            android:text="6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/button7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button3"
            android:background="@drawable/red_round_button"/>
    <Button
            android:text="7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/red_round_button"
            android:id="@+id/button8" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button5"/>
    <Button
            android:text="9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/red_round_button"
            android:id="@+id/button9" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button7"/>
    <Button
            android:text="8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/red_round_button"
            android:id="@+id/button10" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="Cancel"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/red_round_button"
            android:id="@+id/button11" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button9"/>
    <Button
            android:text="0"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/red_round_button"
            android:id="@+id/button12" app:layout_constraintStart_toStartOf="@+id/button10"
            app:layout_constraintTop_toBottomOf="@+id/button10" android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>
