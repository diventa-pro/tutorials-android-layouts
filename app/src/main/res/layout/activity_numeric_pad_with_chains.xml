<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="diventa.pro.androidlayouts.NumericPadActivity">

    <Button
            android:text="1"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="@drawable/red_round_button"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_chainStyle="spread" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:background="@drawable/red_round_button"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:background="@drawable/red_round_button"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="4"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:background="@drawable/red_round_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button6" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:background="@drawable/red_round_button"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button7"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:background="@drawable/red_round_button"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_round_button"
            android:id="@+id/button8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button10"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button5"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_round_button"
            android:id="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button10" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_round_button"
            android:id="@+id/button10"
            app:layout_constraintStart_toEndOf="@+id/button8" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button9" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_round_button"
            android:id="@+id/button11"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button9" app:layout_constraintStart_toStartOf="@+id/button9"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_round_button"
            android:id="@+id/button12"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button10" app:layout_constraintStart_toStartOf="@+id/button10"/>
</android.support.constraint.ConstraintLayout>
